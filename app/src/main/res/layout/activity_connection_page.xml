<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <TextView
        android:id="@+id/label1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/searching"
        android:textAlignment="textStart"
        android:textColor="@color/arnica4"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/label2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/look"
        android:textAlignment="textStart"
        android:textColor="@color/font"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:layout_below="@id/label1"
        android:layout_marginTop="30dp" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:indeterminateTint="@color/arnica4"
        style="?android:attr/progressBarStyle"
        android:layout_below="@id/label2"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/label3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/device"
        android:textAlignment="textStart"
        android:textColor="@color/font"
        android:textSize="30sp" />

        <TextView
            android:id="@+id/device_name_text"
            android:layout_width="wrap_content"
            android:layout_below="@id/label3"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="@color/font"
            android:textSize="17sp" />
    <TextView
        android:id="@+id/device_name_text2"
        android:layout_width="wrap_content"
        android:layout_below="@id/device_name_text"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text=""
        android:textColor="@color/font"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/device_name_text3"
        android:layout_width="wrap_content"
        android:layout_below="@id/device_name_text2"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:text=""
        android:textColor="@color/font"
        android:textSize="17sp" />
    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/baseline_restart_alt_24"
        android:backgroundTint="@color/arnica4"
        android:text="@string/tryagain"
        android:textSize="10dp"
        android:visibility="invisible"
        android:textColor="@color/background"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
